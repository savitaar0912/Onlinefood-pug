extends base.pug 

block scripts
    script(src="/static/index.js") 

block style 
    style 
        include ../static/style.css
        //- include ../static/phone.css

block content 
    h2.h-secondary.center #{msg}
    section#contact
        h1.h-primary.center Contact Us
        div#contact-box
            form(action="/contact" method = 'post' class = "myForm")
                div.form-group
                    label(for="name") Name:
                    input(type="text" name="name" id = "name" placeholder="Enter your Name")
                
                div.form-group
                    label(for="mail") E-Mail:
                    input(type="email" name="mail" id = "mail" placeholder="Enter your Email")
                
                div.form-group
                    label(for="num") Phone:
                    input(type="number" name="phone" id = "num" placeholder="Enter your Phone")
                
                div.form-group
                    label(for="msg") Message:
                    textarea(name="msg" id = "msg" placeholder="Write your msg" cols="30" rows="10")
                    
                    button.btn Submit 
